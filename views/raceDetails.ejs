<!DOCTYPE html>
<html>
  <head>
    <title>DoggoInventory</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div>
      <h1>Race Name: <%= race.raceName %></h1>
      <p>Size: <%= race.Syze %></p>
      <%= race._id %>
      <div>
        <h2>List of Doggos:</h2>
       
      </div>
      <form method="POST" action="/doggo/newDoggo">
        <label for="doggoName">Doggo Name:</label>
        <input type="text" id="doggoName" name="doggoName" required />
        <label for="color">Doggo Color:</label>
        <input type="text" id="doggoColor" name="doggoColor" required />
        <label for="price">Doggo Price:</label>
        <select name="price" id="price">
          <option value="free">Free</option>
          <option value="free">Lots of love</option>
          <option value="free">Cookies</option>
        </select>
        <select name="raceId" id="raceId">
          <%if(races.length > 0) {races.forEach(race => { %>
          <option value="<%= race._id %>""><%= race.raceName %></option>
          <% })} else{%>
          <option value="">Sorry no races available</option>
          <% } %>
        </select>

        <button type="submit">NEW DOGGO YAAAAAAAAAAAAY</button>
      </form>
      <div>
        <% if(race.doggos.length > 0 ) {%>
          <% race.doggos.forEach(doggo => { %>
          <p>
          <%= doggo  %>
          </p>
          <% }) %>
          <% } else{%>
           <p>Num tem :(</p>
            <% } %>
      </div>
    </div>
  </body>
</html>
